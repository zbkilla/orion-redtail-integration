{
  "name": "orion-redtail-project",
  "version": "1.0.0",
  "description": "## Overview This repository contains documentation and project planning materials for implementing the integration between Orion Advisor and Redtail CRM systems. The project focuses on establishing a bi-directional sync between existing Orion and Redtail data while maintaining data integrity and avoiding duplicates.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "linear": "npm run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "crawl": "npx ts-node src/crawlers/linear-docs-crawler-v2.ts",
    "crawl:dev": "NODE_ENV=development npx ts-node src/crawlers/linear-docs-crawler-v2.ts",
    "crawl:cache": "npx ts-node src/crawlers/linear-docs-crawler-v2.ts --cache",
    "crawl:help": "npx ts-node src/crawlers/linear-docs-crawler-v2.ts --help",
    "discover": "npx ts-node src/crawlers/linear-docs-discovery.ts",
    "crawl:all": "npx ts-node src/crawlers/crawl-discovered.ts",
    "crawl:all:cache": "npx ts-node src/crawlers/crawl-discovered.ts --cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zbkilla/orion-redtail-integration.git"
  },
