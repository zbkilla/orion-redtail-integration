  "dependencies": {
    "@linear/sdk": "^56.0.0",
    "@types/node": "^24.3.0",
    "dotenv": "^17.2.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@types/jsdom": "^21.1.7",
    "@types/node-fetch": "^2.6.13",
    "jsdom": "^26.1.0",
    "mcp-remote": "^0.1.18",
    "node-fetch": "^3.3.2",
    "ts-node": "^10.9.2"
  }
